        <span class="fs-4">Admin Panel</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="@Url.Action("Index", "Admin")" class="nav-link @(active == "Index" ? "active" : "")">
