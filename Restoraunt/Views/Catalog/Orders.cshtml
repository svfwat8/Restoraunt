@model IEnumerable<Restoraunt.Models.ProductViewModel>
@{
    ViewBag.Title = "Наши продукты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-vh-100 bg-gradient-to-br text-white py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="text-danger display-5 fw-bold">Наши продукты</h2>
            <p class="text-light">Изучите лучшие блюда нашего меню</p>
        </div>

        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="bg-dark rounded-4 shadow p-3 h-100 d-flex flex-column justify-content-between">
                        <div class="img-box mb-3 text-center">
                            <img src="@Url.Content(product.ImageUrl ?? "~/Images/no-image.png")" alt="@product.Title" class="img-fluid rounded shadow-sm" style="max-height: 200px; object-fit: cover;" />
                        </div>
                        <div class="detail-box text-center">
                            <h5 class="text-danger">@product.Title</h5>
                            <p class="text-secondary">@product.Description</p>
                            <div class="mt-3">
                                <a href="@Url.Action("OrdersDetail", "Catalog", new { id = product.Id })" class="btn btn-outline-light btn-sm rounded-pill px-4">Подробнее</a>
                            </div>
                            <div class="price mt-2 text-light fw-bold">
                                @product.Price.ToString("C")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info mt-5 text-center">Товары не найдены.</div>
        }
    </div>
</div>

<style>
    .bg-gradient-to-br {
        background: linear-gradient(to bottom right, #1a0026, #4b002c, #2c003e);
    }
</style>
