@model Restoraunt.Models.ProductViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-vh-100 bg-gradient-to-br text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="@Url.Content(Model.ImageUrl ?? "~/Images/no-image.png")"
                     class="img-fluid rounded shadow-sm"
                     alt="@Model.Title"
                     style="max-height: 400px; object-fit: cover;" />
            </div>
            <div class="col-lg-6">
                <h2 class="text-danger fw-bold mb-3">@Model.Title</h2>
                <p class="text-light">@Model.Description</p>
                <h4 class="text-success mt-3">@Model.Price.ToString("C")</h4>
                <a href="#" class="btn btn-outline-light rounded-pill mt-4 px-4 py-2">Добавить в корзину</a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-to-br {
        background: linear-gradient(to bottom right, #1a0026, #4b002c, #2c003e);
    }
</style>
