@model Restoraunt.Models.UserProfileViewModel
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <div class="heading_container mb-4">
            <h2>Личный кабинет</h2>
        </div>
        @if (TempData["ProfileUpdated"] != null)
        {
            <div class="alert alert-success">@TempData["ProfileUpdated"]</div>
        }

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/images/user-profile.png" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        <h4>@Model.UserName</h4>
                        <p class="text-muted mb-2">Участник с @Model.RegistrationDate.ToString("MMMM yyyy")</p>
                        <div class="d-flex justify-content-center">
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary mr-2">Изменить</a>
                            <a href="@Url.Action("ChangePass", "Account")" class="btn btn-warning mr-2">Сменить пароль</a>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">Выйти</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Информация</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item"><strong>Имя:</strong> @Model.FirstName @Model.LastName</li>
                            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                            <li class="list-group-item"><strong>Телефон:</strong> @Model.PhoneNumber</li>
                        </ul>
                        <div class="row text-center">
                            <div class="col-sm-4 mb-2">
                                <div class="p-3" style="background:#f8f9fa; border-radius:10px;">
                                    <h2 class="mb-1">@Model.OrdersCount</h2>
                                    <div class="text-muted">Заказов</div>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-2">
                                <div class="p-3" style="background:#f8f9fa; border-radius:10px;">
                                    <h2 class="mb-1">–</h2>
                                    <div class="text-muted">Оставлено отзывов</div>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-2">
                                <div class="p-3" style="background:#f8f9fa; border-radius:10px;">
                                    <h2 class="mb-1">–</h2>
                                    <div class="text-muted">Бонусы</div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div>
                            <a href="@Url.Action("Orders", "Account")" class="btn btn-outline-primary">Мои заказы</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
