@model Restoraunt.Models.OrderViewModel
@using Restoraunt.Domain.Enums.Order

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Изменить статус заказа";
}

<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Изменить статус заказа #@Model.Id</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Текущий статус</label>
                            <div class="form-control-plaintext">
                                @{
                                    var status = Model.State == UState.Done ? "Завершён" :
                                                 Model.State == UState.Waiting ? "В ожидании" :
                                                 "Отменён";
                                }
                                <strong>@status</strong>
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.Label("Новый статус", htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("newState",
                                new SelectList(new[]
                                {
                                    new { Value = UState.Waiting, Text = "В ожидании" },
                                    new { Value = UState.Done, Text = "Завершён" },
                                    new { Value = UState.Canceled, Text = "Отменён" }
                                }, "Value", "Text", Model.State),
                                "Выберите...", new { @class = "form-select" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                            <a href="@Url.Action("Orders")" class="btn btn-outline-secondary">Назад</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
