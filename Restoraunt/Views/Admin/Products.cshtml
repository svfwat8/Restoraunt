@model List<Restoraunt.Models.ProductViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Товары";
}

<div id="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Товары</h1>
        <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Добавить товар
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Название</th>
                            <th>Описание</th>
                            <th>Цена</th>
                            <th>Картинка</th>
                            <th>Количество</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Title</td>
                                <td>@product.Description</td>
                                <td>@product.Price лей</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="img" style="max-width:60px; max-height:60px;" />
                                    }
                                </td>
                                <td>@product.Quantity</td>
                                <td>
                                    <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-outline-primary">Редактировать</a>
                                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить этот товар?');">Удалить</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
