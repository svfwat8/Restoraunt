@model Restoraunt.Models.EditUserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Редактирование пользователя";
}

<section class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Редактировать пользователя</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                            <a href="@Url.Action("Users")" class="btn btn-outline-secondary">Назад</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
