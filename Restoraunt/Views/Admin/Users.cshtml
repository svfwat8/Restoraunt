@model List<Restoraunt.Models.EditUserViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Пользователи";
}

<div id="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Пользователи</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Имя пользователя</th>
                            <th>Email</th>
                            <th>Имя</th>
                            <th>Фамилия</th>
                            <th>Телефон</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].Id</td>
                                <td>@Model[i].UserName</td>
                                <td>@Model[i].Email</td>
                                <td>@Model[i].FirstName</td>
                                <td>@Model[i].LastName</td>
                                <td>@Model[i].PhoneNumber</td>
                                <td>
                                    <a href="@Url.Action("EditUser", "Admin", new { id = Model[i].Id })" class="btn btn-sm btn-outline-primary">Редактировать</a>
                                    <a href="@Url.Action("DeleteUser", "Admin", new { id = Model[i].Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?');">Удалить</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
