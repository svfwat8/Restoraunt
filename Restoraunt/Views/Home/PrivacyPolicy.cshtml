    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-vh-100 bg-gradient-to-br from-dark-purple via-dark-red to-deep-purple text-white py-5">
    <div class="container">
        <section class="bg-dark text-white rounded-4 shadow p-5">
            <h1 class="text-center text-danger mb-4">Политика конфиденциальности</h1>
            <p class="text-center text-secondary">Дата вступления в силу: 12 марта 2025 года</p>

            <hr class="border-secondary my-4" />

            <h2 class="text-light mt-4">1. Введение</h2>
            <p class="text-secondary">
                Настоящая политика конфиденциальности регулирует использование персональных данных, собираемых на нашем сайте.
            </p>

            <h2 class="text-light mt-4">2. Сбор и использование данных</h2>
