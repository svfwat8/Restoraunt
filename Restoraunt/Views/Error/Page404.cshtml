@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Страница не найдена";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-gradient-to-br text-white">
    <div class="text-center p-4">
        <h1 class="display-1 fw-bold text-danger">404</h1>
        <h2 class="mb-3">Страница не найдена</h2>
        <p class="lead mb-4">Страница не существует или была удалена.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-danger px-4 py-2 rounded-pill">
            Вернуться на главную
        </a>
    </div>
</div>

<style>
    .bg-gradient-to-br {
        background: linear-gradient(to bottom right, #1a0026, #4b002c, #2c003e);
    }
</style>
